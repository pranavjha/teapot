.teapot-util-mask {
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	z-index: 999;
	cursor: wait;
}

.teapot-util-mask .mask-view {
	position: absolute;
	top: 50%;
	left: 50%;
	padding: 2px 20px;
	border-radius: 5px;
	border: 2px solid rgb(255, 255, 255);
	box-shadow: 0 0 50px #000000;
	color: #FFFFFF;
	font-weight: bold;
	text-shadow: 0 0 2px #000000;
	background: #00a0ca;
}